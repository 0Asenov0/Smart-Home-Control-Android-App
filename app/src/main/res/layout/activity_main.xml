<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Title -->
        <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remote Control App"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"/>

        <!-- Lights Control -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardViewLights"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#000000"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

            <TextView
                    android:id="@+id/textViewLights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lights"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <Switch
                    android:id="@+id/switchLights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OFF"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Fan Control -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardViewFan"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#000000"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

            <TextView
                    android:id="@+id/textViewFan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fan"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <Switch
                    android:id="@+id/switchFan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OFF"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Curtains Control -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardViewCurtains"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#000000"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

            <TextView
                    android:id="@+id/textViewCurtains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Curtains"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <Switch
                    android:id="@+id/switchCurtains"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLOSED"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Door Control -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardViewDoor"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#000000"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

            <TextView
                    android:id="@+id/textViewDoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Door"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <Switch
                    android:id="@+id/switchDoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOCKED"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- AC Control -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardViewAC"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#000000"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

            <TextView
                    android:id="@+id/textViewAC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <Switch
                    android:id="@+id/switchAC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OFF"
                    android:textColor="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>
